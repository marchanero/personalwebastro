---
import Layout from '../layouts/Layout.astro';
import PublicationsList from '../components/Publications.astro';

const seoMetadata = {
    title: "Publicaciones Científicas | Roberto Sánchez Reolid",
    description: "Explora mis publicaciones científicas en el campo del procesamiento de señales, deep learning y bioingeniería. Artículos en revistas y conferencias internacionales.",
    openGraph: {
        basic: {
            title: "Publicaciones Científicas - Roberto Sánchez Reolid",
            type: "website",
            image: "/og-publications.jpg", // Asegúrate de tener esta imagen en tu carpeta public
        },
        optional: {
            description: "Publicaciones científicas en procesamiento de señales y deep learning",
            locale: "es_ES",
            siteName: "Roberto Sánchez Reolid"
        },
        article: {
            author: "Roberto Sánchez Reolid",
            tags: ["Investigación", "Publicaciones", "Deep Learning", "Procesamiento de Señales"]
        }
    },
    twitter: {
        card: "summary_large_image",
        site: "@rsanchezreolid", // Reemplaza con tu usuario de Twitter
        creator: "@rsanchezreolid",
        title: "Publicaciones Científicas - Roberto Sánchez Reolid",
        description: "Explora mis publicaciones científicas en procesamiento de señales y deep learning",
        image: "/og-publications.jpg"
    }
};
---

<Layout 
    title={seoMetadata.title}
    description={seoMetadata.description}
>
    <div class="min-h-screen bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800">
        <div class="pt-32 pb-12">
            <div class="container max-w-container mx-auto px-6">
                <div class="max-w-4xl">
                    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
                        Publicaciones Científicas
                    </h1>
                    <p class="text-xl text-gray-600 dark:text-gray-400">
                        Explora mis contribuciones a la investigación en procesamiento de señales, 
                        deep learning y bioingeniería. Utiliza los filtros para encontrar 
                        publicaciones específicas por año, tipo o tema.
                    </p>
                </div>
            </div>
        </div>

        <PublicationsList />

        <div class="py-12">
            <div class="container max-w-container mx-auto px-6">
                <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
                        Métricas de Investigación
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="text-center">
                            <div class="text-4xl font-bold text-accent dark:text-accent-light mb-2">
                                {/* Calcular total de publicaciones */}
                                30+
                            </div>
                            <div class="text-gray-600 dark:text-gray-400">
                                Publicaciones Totales
                            </div>
                        </div>
                        <div class="text-center">
                            <div class="text-4xl font-bold text-accent dark:text-accent-light mb-2">
                                {/* Calcular total de citas */}
                                250+
                            </div>
                            <div class="text-gray-600 dark:text-gray-400">
                                Citaciones
                            </div>
                        </div>
                        <div class="text-center">
                            <div class="text-4xl font-bold text-accent dark:text-accent-light mb-2">
                                {/* Calcular h-index */}
                                8
                            </div>
                            <div class="text-gray-600 dark:text-gray-400">
                                H-Index
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>