---
import Layout from '../layouts/Layout.astro';
import { getPersonalProjects } from '../api/personal-projects';

const projects = getPersonalProjects();
---

<Layout title="Proyectos Personales - Roberto Sanchez Reolid">
	<div class="container max-w-container py-12">
		<h1 class="heading-1 mb-8 animate-fade-in">Proyectos Personales</h1>
		
		<div class="grid gap-8 animate-slide-up">
			{projects.map(project => (
				<article class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-200/10 dark:border-gray-700/30 group">
					<header class="mb-4">
						<div class="flex justify-between items-start mb-2">
							<h2 class="heading-2">{project.title}</h2>
							<div class="flex gap-3">
								{project.github && (
									<a href={project.github} target="_blank" rel="noopener noreferrer" 
										class="text-gray-600 hover:text-accent dark:text-gray-400 dark:hover:text-accent-light transition-colors">
										<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
										</svg>
									</a>
								)}
								{project.live && (
									<a href={project.live} target="_blank" rel="noopener noreferrer" 
										class="text-gray-600 hover:text-accent dark:text-gray-400 dark:hover:text-accent-light transition-colors">
										<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
										</svg>
									</a>
								)}
							</div>
						</div>
					</header>

					<p class="text-gray-700 dark:text-gray-300 mb-6">
						{project.description}
					</p>

					<div class="mb-6">
						<h3 class="heading-3 text-lg mb-3">Tecnologías</h3>
						<div class="flex flex-wrap gap-2">
							{project.technologies.map(tech => (
								<span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-100 rounded-full text-sm">
									{tech}
								</span>
							))}
						</div>
					</div>

					<div class="mb-6">
						<h3 class="heading-3 text-lg mb-3">Características</h3>
						<ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300">
							{project.features.map(feature => (
								<li>{feature}</li>
							))}
						</ul>
					</div>

					<footer class="flex flex-wrap gap-4">
						{project.documentation && (
							<a href={project.documentation} target="_blank" rel="noopener noreferrer" 
								class="inline-flex items-center text-sm text-accent hover:text-accent-dark dark:text-accent-light dark:hover:text-accent-lighter transition-colors">
								<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
								</svg>
								Documentación
							</a>
						)}
						{project.tutorial && (
							<a href={project.tutorial} target="_blank" rel="noopener noreferrer" 
								class="inline-flex items-center text-sm text-accent hover:text-accent-dark dark:text-accent-light dark:hover:text-accent-lighter transition-colors">
								<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>
								</svg>
								Tutorial
							</a>
						)}
						{project.download && (
							<a href={project.download} target="_blank" rel="noopener noreferrer" 
								class="inline-flex items-center text-sm text-accent hover:text-accent-dark dark:text-accent-light dark:hover:text-accent-lighter transition-colors">
								<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
								</svg>
								Descargar
							</a>
						)}
					</footer>
				</article>
			))}
		</div>
	</div>
</Layout>