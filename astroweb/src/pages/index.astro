---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Research from '../components/Research.astro';
import Teaching from '../components/Teaching.astro';
import Contact from '../components/Contact.astro';

const seoMetadata = {
	title: "Roberto Sánchez Reolid - Profesor & Investigador en UCLM",
	description: "Sitio web personal de Roberto Sánchez Reolid, Profesor en UCLM e Investigador en Procesamiento de Señales. Descubre mi investigación, publicaciones y proyectos.",
	openGraph: {
		basic: {
			title: "Roberto Sánchez Reolid - Profesor & Investigador",
			type: "website",
			image: "/og-image.jpg",
		},
		optional: {
			description: "Profesor en UCLM e Investigador en Procesamiento de Señales",
			locale: "es_ES",
		}
	}
};
---

<Layout title={seoMetadata.title} description={seoMetadata.description}>
	<main class="flex flex-col min-h-screen">
		<Hero />
		<Research />
		<Teaching />
		<Contact />
	</main>
	<footer class="py-8 bg-white dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800 mt-auto">
		<div class="container max-w-container mx-auto px-6">
			<div class="flex flex-col md:flex-row justify-between items-center gap-4">
				<p class="text-gray-600 dark:text-gray-400 text-sm">
					&copy; {new Date().getFullYear()} Roberto Sánchez Reolid - Universidad de Castilla-La Mancha
				</p>
				<div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-500">
					<span>Desarrollado con</span>
					<span class="text-accent dark:text-accent-light">❤</span>
					<span>usando</span>
					<a
						href="https://astro.build"
						target="_blank"
						rel="noopener noreferrer"
						class="text-gray-900 dark:text-white hover:text-accent dark:hover:text-accent-light transition-colors"
					>
						Astro
					</a>
				</div>
			</div>
		</div>
	</footer>
</Layout>
