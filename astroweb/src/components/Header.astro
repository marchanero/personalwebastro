---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
    { href: "#inicio", text: "Inicio" },
    { href: "#investigacion", text: "Investigación" },
    { href: "#docencia", text: "Docencia" },
    { href: "#contacto", text: "Contacto" }
];
---

<header class="fixed top-0 left-0 right-0 z-50 animate-fade-in">
    <div class="absolute inset-0 bg-glass-light dark:bg-glass-dark backdrop-blur-md"></div>
    <div class="container max-w-container mx-auto px-6 relative">
        <nav class="flex flex-col md:flex-row justify-between items-center py-4 md:h-header">
            <a href="/" class="group flex flex-col items-center md:items-start">
                <span class="font-display text-xl font-bold text-gray-900 dark:text-white group-hover:text-accent dark:group-hover:text-accent-light transition-colors">
                    Roberto Sánchez Reolid
                </span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    Profesor e Investigador
                </span>
            </a>
            <div class="flex flex-col md:flex-row items-center gap-6 md:gap-8 mt-4 md:mt-0">
                <ul class="flex flex-wrap justify-center gap-6 md:gap-8">
                    {navItems.map(item => (
                        <li>
                            <a 
                                href={item.href}
                                class="relative text-gray-600 dark:text-gray-300 hover:text-accent dark:hover:text-accent-light font-medium transition-colors duration-200 after:absolute after:left-0 after:bottom-0 after:h-0.5 after:w-0 after:bg-accent dark:after:bg-accent-light after:transition-all hover:after:w-full"
                            >
                                {item.text}
                            </a>
                        </li>
                    ))}
                </ul>
                <div class="mt-4 md:mt-0">
                    <ThemeToggle />
                </div>
            </div>
        </nav>
    </div>
</header>

<style>
    header {
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .dark header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    }
</style>